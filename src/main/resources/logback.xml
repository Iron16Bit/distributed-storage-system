<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Fixed width pattern for better alignment -->
            <pattern>%gray(%d{HH:mm:ss.SSS}) %highlight(%-5level) %magenta(%-11logger{0}) - %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="it.unitn.ds1.actors.StorageNode" level="INFO"/>
    <logger name="it.unitn.ds1.Main" level="INFO"/>
    <logger name="it.unitn.ds1.actors.Client" level="INFO" />
    
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
